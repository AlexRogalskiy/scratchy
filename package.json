{
  "name": "scratchy",
  "version": "1.0.0",
  "description": "a monolith",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonraimondi/scratchy.git"
  },
  "scripts": {
    "db": "npm run --prefix api db:migrate && npm run --prefix api db:seed",
    "build": "run-p build:web build:api",
    "build:web": "npm run --prefix web build",
    "build:api": "npm run --prefix api build",
    "format": "run-p format:web format:api format:cypress",
    "format:web": "npm run --prefix web format",
    "format:api": "npm run --prefix api format",
    "format:cypress": "npm run --prefix cypress format",
    "proxy": "caddy start --watch",
    "prestart": "npm run build",
    "start": "run-p start:web start:api start:worker proxy",
    "start:web": "npm run --prefix web start:prod",
    "start:worker": "npm run --prefix api start:queue:dev",
    "start:api": "npm run --prefix api start:prod",
    "test": "start-server-and-test start https://scratchy.localdomain test:integrations",
    "test:integrations": "cd cypress && ./node_modules/.bin/cypress run"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.1"
  },
  "keywords": [],
  "author": "Jason Raimondi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jasonraimondi/scratchy/issues"
  },
  "homepage": "https://github.com/jasonraimondi/scratchy#readme"
}
