{% extends "emails/layouts/index.njk" %}

{% block headTitle %}Register{% endblock %}

{% block main %}
  <mj-section padding="20px 0">
    <mj-column width="60%">
      <mj-text font-size="10px">Verify your email for {{ app_name }}!</mj-text>
    </mj-column>
    <mj-column width="40%">
      <mj-text font-size="10px" align="right">{{ app_homepage }}</mj-text>
    </mj-column>
  </mj-section>
  <mj-section>
    <mj-column width="100%">
      <mj-image href="https://recast.ai?ref=newsletter" src="https://placehold.it/350x200"></mj-image>
      <mj-text align="center">Hi ya</mj-text>
    </mj-column>
  </mj-section>
  <mj-section>
    <mj-column width="100%">
      <mj-text>
        <p>Hello hello {{ user.email }}!</p>
        <p>Please click this shiny button to verify your email!</p>
        <p><a href="{{ url }}">Tada!</a></p>
        <p><small>If the link above is not working, you can always try this one: {{ url }}</small></p>
      </mj-text>
    </mj-column>
  </mj-section>
  <mj-section>
    <mj-column width="11%">
      <mj-image padding-right="0px" padding-left="25px" align="left" width="70px" href="https://twitter.com/jsonmamondi"
                src="https://jasonraimondi.com/misc/me/avatar.png"></mj-image>
    </mj-column>
    <mj-column width="89%">
      <mj-text padding="0 25px">
        <p style="color:#BDBDBD; line-height: 9px"><a href="{{ url }}" style="color: #3498DB;">Scratchy</a></p>
        <p style="font-style: italic; color:#BDBDBD; line-height: 9px">Your light in the storm</p>
      </mj-text>
    </mj-column>
  </mj-section>
{% endblock %}