{% extends "oauth/layouts/index.njk" %}

{% block main %}
<form action="{{ loginFormAction }}" method="POST">
    <h1>Login</h1>

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    <fieldset>
        <label>
            Email
            <input type="email" name="email" value="jason@raimondi.us" required>
        </label>
        <label>
            Password
            <input type="password" name="password" value="jasonraimondi" required>
        </label>

        <a href="{{ forgotPasswordLink }}">Forgot Your Password?</a>

        <div>
            <button type="submit">Login</button>
        </div>
    </fieldset>

    <p><a href="/oauth2/help">OAUTH LOGIN</a></p>
</form>
{% endblock %}

{% block styles %}
<style>
    label {
      display: block;
    }
</style>
{% endblock %}